@model AddBookFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Title">
        <span asp-validation-for="Title" class="small text-danger"></span>
    </div>
    <select class="form-select" aria-label="">
        <option selected>Select Author</option>
        @foreach (var author in Model.Author)
        {
            <option value="@author.Id">@author.FullName</option>
        }
    </select>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReleaseYear"></label>
        <input asp-for="ReleaseYear" class="form-control" placeholder="Release Year">
        <span asp-validation-for="ReleaseYear" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageURL"></label>
        <input asp-for="ImageURL" class="form-control" placeholder="Image URL">
        <span asp-validation-for="ImageURL" class="small text-danger"></span>
    </div>
    @foreach (var genre in Model.Genres)
    {
        <div class="form-group">
            <label class="form-check-label" for="flexCheckDefault">
                <input class="form-check-input" type="checkbox" name="@genre.Name" id="@genre.Id">
                @genre.Name
            </label>
        </div>
    }
    <button type="submit" class="btn btn-primary">Submit</button>
</form>